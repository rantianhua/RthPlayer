<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">

    <!--左部显示当前已播放的时间-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_current_time"
        android:layout_centerVertical="true"
        android:text="00:00"/>

    <!--右部显示总时间-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_total_time"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="00:00"/>


    <!--进度条-->
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_progress"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_current_time"
        android:layout_toLeftOf="@+id/tv_total_time"
        />

</RelativeLayout><!-- From: file:/Users/mimashi1-8/AndroidStudioProjects/RthPlayer/app/src/main/res/layout/footer_progress.xml -->